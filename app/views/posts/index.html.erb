<%= render 'auth' %>

<h2 id= "index_title"> Welcome to Hacker News!</h2>
<div id="page_under_title">
  <h2 id="new_post_header">Create a new post!</h2>
  <%=button_to 'New Post', new_post_path, form_class: "new_post_form", method: :get%>

  <div id= "new_post_form"></div>
  <div class= "posts">

  <%@posts.each do |post|%>
    <%= render partial: 'post', object: post %>
  <%end%>

  </div>
</div>

