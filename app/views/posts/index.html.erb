<%= render 'auth' %>

<h2 id= "index_title"> Welcome to Hacker News!</h2>


<%=button_to 'New Post', new_post_path, id: "new_post_button", method: :get%>
<div id= "new_post_form"></div>
<div class= "posts">

<%@posts.each do |post|%>
  <li>
    <span>by: <%=link_to post.user.username, user_path(post.user)%></span><br>
    <div class="post", id="<%=post.id%>">
      <%=link_to post.title, post_path(post)%>
      <text>votes:</text><span id="vote_count<%=post.id%>"><%=post.vote_count%></span>
      <%=button_to 'Like', post_vote_path(post), form_class: "up_vote", method: :put%>
    </div><br>
    <%=my_time(post.created_at)%>
    <%= render partial: 'post_owner', locals: {post: post}%>
  </li>
<%end%>

</div>

